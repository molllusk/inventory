<div id="filterrific_results">

  <div class='center' style='margin-bottom: 30px;'>
    <%= page_entries_info products %>
  </div>
  
  <table class="products full_width">
    <tr>
      <th>Product (vend name)</th>
      <th>Added (Pacific Time)</th>
      <th>SKU</th>
      <th>Vend SF Qty</th>
      <th>Shopify SF Qty</th>
      <th>Shopify Wholesale Qty</th>
      <th>3rdParty?</th>
      <th>Sale?</th>
      <th>Links</th>
    </tr>
    <% products.each do |product| %>
      <% vend = product.vend_datum %>
      <% retail_shopify = product.retail_shopify %>
      <% wholesale_shopify = product.wholesale_shopify %>
      <tr>
        <td><%= link_to vend.name, product %></td>
        <td><%= product.created_at.in_time_zone("Pacific Time (US & Canada)").to_s(:humanized_ago) %></td>
        <td><%= vend.sku %></td>
        <td><%= vend.inventory || 'missing' %></td>
        <td>
          <% if retail_shopify.present? %>
            <%= retail_shopify.inventory || 'missing' %>
          <% else %>
            n/a
          <% end %>
        </td>
        <td>
          <% if wholesale_shopify.present? %>
            <%= wholesale_shopify.inventory || 'missing' %>
          <% else %>
            n/a
          <% end %>
        </td>
        <td>
          <% if retail_shopify.present? %>
            <%= retail_shopify.third_party? %>
          <% else %>
            n/a
          <% end %>
        </td>
        <td>
          <% if retail_shopify.present? %>
            <%= retail_shopify.sale? %>
          <% else %>
            n/a
          <% end %>
        </td>
        <td>
          <a href='https://mollusksurf.vendhq.com/product/<%= vend.vend_id %>' target='_blank'>Vend</a>
          <% if retail_shopify.present? %>
            <br />
            <a href='https://mollusksurf.myshopify.com/admin/products/<%= retail_shopify.shopify_product_id %>/variants/<%= retail_shopify.variant_id %>' target='_blank'>Retail Shopify</a>
          <% end %>
          <% if wholesale_shopify.present? %>
            <br />
            <a href='https://molluskats.myshopify.com/admin/products/<%= wholesale_shopify.shopify_product_id %>/variants/<%= wholesale_shopify.variant_id %>' target='_blank'>Wholesale Shopify</a>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>

  <div class='center'>
  <%= will_paginate %>
  </div>
</div>
