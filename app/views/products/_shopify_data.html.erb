<% if retail_shopify.present? || wholesale_shopify.present? %>
  <% headers = ['store'] + ((retail_shopify || wholesale_shopify).attributes.keys - ['store'])  %>
  <hr/>
  <h2 class='center'>Shopify Data:</h2>
  <table class='full_width'>
    <% headers.each do |header| %>
      <% next if %w[product_id vendor compare_at_price fulfillment_service grams inventory_management inventory_policy requires_shipping weight weight_unit shopify_created_at inventory_quantity old_inventory_quantity].include?(header) %>
      <tr>
        <td>
          <strong><%= header.humanize %></strong>
        </td>
        <% if retail_shopify.present? %>
          <td>
            <% if header == 'store' %>
              <a href='<%= retail_shopify.link %>' target='_blank'>RETAIL <i class='fa fa-external-link-alt'></i></a>
            <% elsif retail_shopify.send(header).is_a? Array %>
              <%= retail_shopify.send(header).join(', ') %>
            <% elsif retail_shopify.send(header).is_a? String %>
              <%= retail_shopify.send(header).humanize %>
            <% else %>
              <%= retail_shopify.send(header) %>
            <% end %>
          </td>
        <% end %>
        <% if wholesale_shopify.present? %>
          <td>
            <% if header == 'store' %>
              <a href='<%= wholesale_shopify.link %>' target='_blank'>WHOLESALE <i class='fa fa-external-link-alt'></i></a>
            <% elsif wholesale_shopify.send(header).is_a? Array %>
              <%= wholesale_shopify.send(header).join(', ') %>
            <% elsif wholesale_shopify.send(header).is_a? String %>
              <%= wholesale_shopify.send(header).humanize %>
            <% else %>
              <%= wholesale_shopify.send(header) %>
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
    <tr>
      <td>
        <strong>Inventory</strong>
      </td>
      <% if retail_shopify.present? %>
        <td>
          <% if retail_shopify.shopify_inventories.present? %>
            <% retail_shopify.shopify_inventories.each do |inventory| %>
              <strong><%= inventory.location.gsub(' Retail', '') %></strong>: <%= inventory.inventory %><br />
            <% end %>
          <% end %>
        </td>
      <% end %>
      <% if wholesale_shopify.present? %>
        <td>
          <% if wholesale_shopify.shopify_inventories.present? %>
            <% wholesale_shopify.shopify_inventories.each do |inventory| %>
              <strong><%= inventory.location.gsub(' Wholesale', '') %></strong>: <%= inventory.inventory %><br />
            <% end %>
          <% end %>
        </td>
      <% end %>
    </tr>
    <tr>
      <td></td>
      <% if retail_shopify.present? %>
        <td>
          <%= link_to(raw('<i class="fa fa-trash"></i> delete retail data'), shopify_datum_destroy_path(retail_shopify), method: :delete, data: { confirm: 'Are you sure you want to DELETE RETAIL Shopify Data for this product?' }, class: 'red') %>
        </td>
      <% end %>
      <% if wholesale_shopify.present? %>
        <td>
          <%= link_to(raw('<i class="fa fa-trash"></i> delete wholesale data'), shopify_datum_destroy_path(wholesale_shopify), method: :delete, data: { confirm: 'Are you sure you want to DELETE WHOLESALE Shopify Data for this product?' }, class: 'red') %>
        </td>
      <% end %>
    </tr>
  <table>
<% end %>
