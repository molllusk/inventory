<table class="products full_width">
  <tr>
    <th>When?  (PST / PDT)</th>
    <th>Location</th>
    <th>Total Orders</th>
    <th>Total Items</th>
    <th>Total Cost of Goods</th>
    <th>Vend Consignment</th>
    <th>PO</th>
    <th>QBO</th>
  </tr>
  <% daily_orders.each do |date, orders| %>
    <tr>
      <td class='border-bottom' rowspan='<%= orders.count %>' style='background-color: #FFFFFF'>
        <%= date.in_time_zone("Pacific Time (US & Canada)").to_s(:humanized_ago) %>
      </td>
      <% orders.each_with_index do |order, index| %>
        <% last_row = (index == (orders.count - 1)) %>
        <% if index.positive? %>
          <tr>
        <% end %>
          <td class='<%= 'border-bottom' if last_row %>'>
            <a href='<%= daily_order_path(order) %>' target='_blank'><%= VendClient::OUTLET_NAMES_BY_ID[order.outlet_id] %> <i class='fa fa-external-link-alt'></i></a>
          </td>
          <td class='<%= 'border-bottom' if last_row %>'>
            <%= order.orders.count %>
          </td>
          <td class='<%= 'border-bottom' if last_row %>'>
            <%= order.total_items %>
          </td>
          <td class='<%= 'border-bottom' if last_row %>'>
            <%= number_to_currency(order.total_cost, :unit => "$", :separator => ".", :delimiter => ",") %>
          </td>
          <td class='<%= 'border-bottom' if last_row %>'>
            <% if order.vend_consignment_url %>
              <a href='<%= order.vend_consignment_url %>' target='_blank'>Vend <i class='fa fa-external-link-alt'></i></a>
            <% else %>
               -
            <% end %>
          </td>
          <td class='<%= 'border-bottom' if last_row %>'>
            <a href='<%= daily_order_po_path(order) %>' target='_blank'><%= order.display_po %> <i class='fa fa-external-link-alt'></i></a>
          </td>
          <td class='<%= 'border-bottom' if last_row %>'>
            <% if order.qbo_id.present? %>
              <a href='https://c3.qbo.intuit.com/app/salesreceipt?txnId=<%= order.qbo_id %>' target='_blank'>QBO <i class='fa fa-external-link-alt'></i></a>
            <% else %>
               -
            <% end %>
          </td>
        </tr>
      <% end %>
  <% end %>
</table>
