<div id="filterrific_results">

  <table class="products full_width">
    <tr>
      <th>Product Type</th>
      <th>Size</th>
      <th>San Francisco</th>
      <th>Venice Beach</th>
      <th>Santa Barbara</th>
    </tr>
    <% inventory_thresholds.each do |threshold| %>
      <tr>
        <td><%= threshold['Category'] %></td>
        <td><%= threshold['Size'] %></td>
        <td><%= threshold['San Francisco'] %></td>
        <td><%= threshold['Venice Beach'] %></td>
        <td><%= threshold['Santa Barbara'] %></td>
      </tr>
    <% end %>
  </table>
</div>
